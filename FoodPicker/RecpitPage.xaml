<Page
    x:Class="FoodPicker.RecpitPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#fff6d5">
    <Grid>
        <ProgressRing x:Name="LoadingIndicator" Width="70" Height="70" MinWidth="40" MinHeight="40" VerticalAlignment="Center" HorizontalAlignment="Center"  />
        <StackPanel Name="FirstPanel">
            
       
          
            <StackPanel Margin="12" HorizontalAlignment="Center">
                <TextBlock Name="recipeName" VerticalAlignment="Center" FontSize="22" Margin="12"/>
            </StackPanel>
      
            
           
            <Image Name="foodPick" Width="280" Height="280"/>
            <StackPanel >
                <TextBlock Name="Phase1" Text=""  TextWrapping="Wrap"  />
                <TextBlock Name="Phase2" Text="" TextWrapping="Wrap" />
                <TextBlock Name="Phase3" Text="" TextWrapping="Wrap" />
                <TextBlock Name="Phase4" Text="" TextWrapping="Wrap" />
                <TextBlock Name="Phase5" Text="" TextWrapping="Wrap" />
                <TextBlock Name="Phase6" Text="" TextWrapping="Wrap" />
            </StackPanel>
            

        </StackPanel>
    </Grid>
   

</Page>
