<Page
    x:Class="FoodPicker.Views.About_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodPicker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#fff6d5">

    <Grid>
        <Image x:ConnectionId='1' Name="MYimage" Source="Assets/Logo.png" VerticalAlignment="Top" />
        <StackPanel VerticalAlignment="Bottom"  >
            <StackPanel.Resources>
                <Style TargetType="AppBar">
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="0,0,0,95"/>
                </Style>
                
            </StackPanel.Resources>

        <TextBlock Text="FoodPicker is an app that simplifies the way we cook! The only you have to do is to choose what's in your fridge and the app will suggest you some wanderfull dihses. Enjoy your meal "  TextWrapping="Wrap" FontSize="17" VerticalAlignment="Bottom" />
            <TextBlock Text="Thanos Kapsalis 2018 " VerticalAlignment="Center"/>
            <Button x:ConnectionId='2' Content="Return" HorizontalAlignment="Center"                      />
            <AppBar/>


        </StackPanel>
        
    </Grid>
</Page>

