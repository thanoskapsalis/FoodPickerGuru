<Page
    x:Class="FoodPicker.Views.SelectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodPicker.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#fff6d5">

    <Grid >

        <StackPanel x:ConnectionId='1' x:Name="MainBoard" >
            <TextBlock Text="My Fridge has :" HorizontalAlignment="Center"/>
            
            <TextBlock Text="Grain:" FontWeight="Bold"/>
            <CheckBox x:ConnectionId='2' x:Name="Spaghetti" Content="Pasta"                             />
            <CheckBox x:ConnectionId='3' x:Name="Rise" Content="Rise"                        />
                  
                        
            <TextBlock Text="Meats" FontWeight="Bold" />
            <CheckBox x:ConnectionId='4'  x:Name="Pork" Content="Pork"                        />
            <CheckBox x:ConnectionId='5' x:Name="Chicken" Content="Chicken"                          />
            
            
            
            <TextBlock Text="Extra:" FontWeight="Bold"/>
            <CheckBox x:ConnectionId='6' x:Name="Cheese" Content="Cheese"                         />
            <CheckBox x:ConnectionId='7' x:Name="Sauce" Content="Sauce"                        />
            <TextBlock/>
            <TextBlock Text="Choose your material and let the app suggest you some meals !" TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='8' x:Name="testtt"/>
            <Button x:ConnectionId='9' x:Name="Continue" Content="Continue" VerticalAlignment="Center" HorizontalAlignment="Center"              />
            

        </StackPanel>
        
    </Grid>
</Page>

