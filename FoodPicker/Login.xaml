<Page
    x:Class="FoodPicker.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FoodPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#fff6d5">
    <StackPanel>
        <TextBlock Text="Login" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50"/>
        <TextBlock Text="E-mail :"/>
        <TextBox Name="mail" PlaceholderText="E-mail" />
        <TextBlock/>
        <TextBlock Text="Password :"/>
        <PasswordBox Name="password" PlaceholderText="Password" />
        <TextBlock/>
        <Button Name="Logme" Content="Login" VerticalAlignment="Center" HorizontalAlignment="Center" Click="LogMeIn"/>
        <ProgressRing x:Name="LoadingIndicator" Width="70" Height="70" MinWidth="40" MinHeight="40" VerticalAlignment="Center" HorizontalAlignment="Center"  />
    </StackPanel>

</Page>
